 @model ParcelaConsultingWeb.ViewModels.AsignarUsuarioViewModel

@{
    Layout = null;
}
<!-- Select2 -->
<link rel="stylesheet" href="~/plugins/select2/css/select2.min.css">
<link rel="stylesheet" href="~/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">

<form asp-action="AsignarUsuario" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPost(this);">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label class="control-label">Usuario</label>
                <select asp-for="UserId" class="form-control">
                    <option class="selected" value="-1">Asigna un Usuario</option>
                </select>
            </div>
        </div>
    </div>
    <div class="form-group col-md-12">
        <input type="submit" value="Asignar" class="btn btn-primary float-right" />
    </div>
</form>

<!-- Bootstrap core JavaScript-->
<script src="~/plugins/jquery/jquery.min.js"></script>
<script src="~/plugins/jquery-ui/jquery-ui.min.js"></script>
<script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- Validations -->
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<!-- Select2 -->
<script src="~/plugins/select2/js/select2.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>