@model IEnumerable<Permission>

<div class="table-responsive-md">
    <table class="table" style="width:100%">
        <thead>
            <tr>
                <th>
                    Entidades
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Entity)
                    </td>
                    <td class="text-center">
                        <a onclick="loadPartialRol('@item.Id')"><i class="fa fa-marker fa-lg"></i></a> |

                        <a onclick="DeleteRole('@item.Id')"
                           class="text-danger">
                            <i class="fa fa-trash fa-lg"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>